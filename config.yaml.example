projects:
  - key_name: "transcriptor"       # must match the `name` field of the key in OpenRouter
    label: "Transcriptor"           # friendly display name
    alert_monthly_usd: 10.0

  - key_name: "octopus-api"
    label: "Octopus"
    alert_monthly_usd: 5.0

alerts:
  enabled: true
  cooldown_minutes: 60             # minimum minutes between repeated alerts per project
